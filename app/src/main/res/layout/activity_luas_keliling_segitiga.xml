<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.muasmakkode.anakbelajar.LuasKelilingSegitiga">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            style="@style/style_judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Segitiga" />

        <Button
            android:id="@+id/button_luassegitiga"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="#f70404"
            android:text="luas" />

        <Button
            android:id="@+id/button_kelilingsegitiga"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="#f70404"
            android:text="keliling" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
