                <ImageButton
                    android:id="@+id/imageView_r"
                    style="@style/style_image"
                    app:srcCompat="@drawable/huruf_r" />

                <ImageButton
                    android:id="@+id/imageView_s"
                    style="@style/style_image"
                    app:srcCompat="@drawable/huruf_s" />

                <ImageButton
                    android:id="@+id/imageView_t"
                    style="@style/style_image"
                    app:srcCompat="@drawable/huruf_t" />

                <ImageButton
                    android:id="@+id/imageView_u"
