<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_image">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="style_judul">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorJudul</item>
        <item name="android:background">@color/bgJudul</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="style_rumus">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colortextButton</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="style_hasil">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorJudul</item>
        <item name="android:background">@color/bgJudul</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="style_button">
        <item name="android:background">@color/colorButton</item>
        <item name="android:textColor">@color/colortextButton</item>

    </style>
</resources>
